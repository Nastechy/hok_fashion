Options -Indexes
DirectoryIndex index.html
RewriteEngine On
RewriteBase /

# Serve existing files/folders as-is (assets, favicons, etc)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# SPA fallback: send everything else to the built index.html
RewriteRule ^.*$ /index.html [L]
